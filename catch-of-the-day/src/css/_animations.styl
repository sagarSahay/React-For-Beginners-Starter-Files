/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background red
  transform : translateX(-120%)
  max-height: 0
  padding 0
  transition 0.5s
  &.order-enter-active
    background yellow
    max-height 60px
    transform : translateX(0)
    padding 2rem 0

.order-exit
  background thistle
  transform : translateX(0)
  max-height : 60px
  transition 0.5s
  &.order-exit-active
    background palegoldenrod
    transform : translateX(120)
    max-height: 0
.count-enter
  background red
  transition 5s
  transform translateY(100%)
  &.count-enter-active
    background yellow
    transform translateY(0)
.count-exit
  background black
  transition 5s
  transform translateY(0)
  position absolute
  left 0
  bottom 0
  &count-exit-active
    background green
    transform translateY(-100%)
